<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="style.css">
  <title>Club de Lectura Frinchiken v3</title>
  <style>
    /* ================= MODAL ================= */
    #loginModal {
      position: fixed;
      top:0; left:0; right:0; bottom:0;
      background: rgba(0,0,0,0.5);
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 1000;
    }
    #loginModal.hidden { display: none; }

    .modal-content {
      background: #fff;
      padding: 20px;
      border-radius: 10px;
      width: 300px;
      text-align: center;
      position: relative;
    }
    .modal-content button {
      margin-top: 10px;
      width: 100%;
    }

    /* ================= FEED LOGROS ================= */
    .feed-logros {
      position: relative;
      height: 200px;
      overflow: hidden;
      background: #f0f4f8;
      border-radius: 10px;
      padding: 10px;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      gap: 5px;
      font-family: 'Arial', sans-serif;
    }

    .logro-feed {
      border-radius: 8px;
      padding: 8px 12px;
      font-weight: bold;
      color: white;
      opacity: 0;
      transform: translateY(20px) scale(0.9);
      animation: popup 0.8s forwards;
    }

    @keyframes popup {
      0% { opacity:0; transform:translateY(20px) scale(0.8); }
      50% { opacity:1; transform:translateY(-5px) scale(1.05); }
      100% { opacity:0; transform:translateY(-50px) scale(0.9); }
    }

    .logro-normal { background: #f1c40f; }
    .logro-raro { background: #2980b9; }
    .logro-legendario { background: #9b59b6; }
    .emoji-normal::before { content: "üì¶ "; }
    .emoji-raro::before { content: "üíé "; }
    .emoji-legendario::before { content: "üèÜ "; }

    /* ================= GENERAL ================= */
    body { font-family: Arial, sans-serif; margin:0; padding:0; }
    header.top-bar { display: flex; justify-content: flex-end; padding:10px; background:#eee; gap:10px; }
    .div1 { padding: 10px; }
    img.portada { max-width: 200px; display:block; margin-top:10px; }
  </style>
</head>
<body>

<!-- ==================== HEADER ==================== -->
<header class="top-bar">
  <button id="btnAcceder">Acceder</button>
  <button id="btnLogout" class="hidden">Logout</button>
</header>

<!-- ==================== MODAL LOGIN ==================== -->
<div id="loginModal" class="hidden">
  <div class="modal-content">
    <h3>Acceder / Registrarse</h3>
    <input type="email" id="email" placeholder="Email" style="width:100%; margin-bottom:5px;">
    <input type="password" id="password" placeholder="Contrase√±a" style="width:100%; margin-bottom:10px;">
    <button id="loginBtn">ENTRAR</button>
    <button id="registrarBtn">REGISTRARSE</button>
    <button id="btnGoogle">Acceder con Google</button>
    <p id="loginError" style="color:red; margin-top:5px;"></p>
  </div>
</div>

<hr class="divider">

<!-- ==================== RETO ACTUAL ==================== -->
<div class="div1">
  <h1>===+++---RETO ACTUAL---+++===</h1>
</div>

<h1 id="titulo">Cargando...</h1>
<p id="autor"></p>
<img class="portada" id="portada" src=" " alt="Portada del libro">

<!-- ==================== LOGROS ==================== -->
<div class="div1">
  <h1>LOGROS CONSEGUIDOS</h1>
  <!-- <div id="feedLogros" class="feed-logros"></div> -->
</div>

<!-- ==================== JS ==================== -->
<script type="module" src="app.js"></script>
<script type="module">
  // ================= MODAL LOGIN =================
  const btnAcceder = document.getElementById("btnAcceder");
  const loginModal = document.getElementById("loginModal");

  btnAcceder.addEventListener("click", () => {
    loginModal.classList.remove("hidden");
  });

  // Cerrar modal al pinchar fuera del contenido
  loginModal.addEventListener("click", (e) => {
    if(e.target === loginModal){
      loginModal.classList.add("hidden");
    }
  });
</script>

</body>
</html>


